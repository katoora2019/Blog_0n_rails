<p id="notice"><%= notice %></p>
<h1>Posts</h1>

<% @posts.each do |post| %>
    <div class="card"> 
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.body %></p>
      <%= link_to 'Show', post %> |
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
        </div>
    <% end %>